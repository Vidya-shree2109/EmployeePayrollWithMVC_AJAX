@model AjaxEmployeePayrollMVC.Models.EmployeeModel

@{
    ViewData["Title"] = "AddEmployee";
}
@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddEmployee" sp-route-id="@Model.Employee_Id" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee_Id" />

             <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Employee_Name" class="control-label"></label>
                        <input asp-for="Employee_Name" class="form-control" />
                        <span asp-validation-for="Employee_Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <select asp-for="Gender" class="form-control" >
                    <option>Male</option> 
                    <option>Female</option> 
                </select>
                       @* <input asp-for="Gender" class="form-control" />
                        <span asp-validation-for="Gender" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Department" class="control-label"></label>
                        <select asp-for="Department" class="form-control" >
                    <option>HR</option> 
                    <option>Sales</option>
                    <option>Finance</option>
                    <option>Engineer</option>
                    <option>Others</option>
                </select>
                        @*<input asp-for="Department" class="form-control" />
                        <span asp-validation-for="Department" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Profile_Image" class="control-label"></label>
                        <div class="profile-radio-content profile-control"></div>
                        @Html.RadioButtonFor(model => model.Profile_Image, "~/assets/Male (1).png")
                        <img class="Profile-image-1 " src = "~/assets/Male (1).png"  />
                        @Html.RadioButtonFor(model => model.Profile_Image, "~/assets/Male (2).png")
                        <img class="Profile-image-1 " src = "~/assets/Male (2).png"  />
                        @Html.RadioButtonFor(model => model.Profile_Image, "~/assets/Female (3) .png")
                        <img class="Profile-image-1 " src = "~/assets/Female (3) .png" />
                        @Html.RadioButtonFor(model => model.Profile_Image, "~/assets/Female (5).png")
                        <img class="Profile-image-1 " src = "~/assets/Female (5).png"  />
                <div/>
                        @*<input asp-for="Profileimage" class="form-control" />*@
                        <span asp-validation-for="Profile_Image" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Salary" class="control-label"></label>
                        <input asp-for="Salary" class="form-control" />
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Notes" class="control-label"></label>
                        <input asp-for="Notes" class="form-control" />
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>