@model IEnumerable<AjaxEmployeePayrollMVC.Models.EmployeeModel>

    <div class="col-md-8 offset-md-2">
        <div class="header-content header">
    <div class="logo">
        <a class="icon"> <img src="~/assets/logo.png"></a>
        <div >
            <h1 class="text-center"> Employee Payroll</h1>
        </div>
    </div>
</div>

        <table class="table">
                <thead class="thead-light">
                    <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Employee_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Profile_Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>
                <th>
                    <a onclick="showInPopup('@Url.Action("AddEmployee","Employee",null,Context.Request.Scheme)','New Employee')" class="btn btn-success text-white"><i class="fas fa-random"></i> New Employee</a>
                </th>
            </tr>
        </thead>
        <tbody>
             @foreach (var item in Model)
             {
                 <tr>
                     <td>
                         @Html.DisplayFor(modelItem => item.Employee_Name)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Gender)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Department)
                     </td>
                     <td>
                         <img src="@Url.Content(item.Profile_Image)"  />
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.StartDate)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Salary)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Notes)
                     </td>
                     <td>
                         <div>
                              <a onclick="showInPopup('@Url.Action("AddEmployee","Employee",new {id=item.Employee_Id},Context.Request.Scheme)','Update Employee')" class="btn btn-info text-white"><i class="fas fa-pencil-alt" ></i> Edit</a>
                                <form asp-action="DeleteEmployee" asp-route-id="@item.Employee_Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                   <input type="hidden" asp-for="@item.Employee_Id" />
                                   <input type="submit" value="Delete" class="btn btn-danger" />
                                </form>
                          </div>
                     </td>
                 </tr>
             }
        </tbody>
        </table>
</div>